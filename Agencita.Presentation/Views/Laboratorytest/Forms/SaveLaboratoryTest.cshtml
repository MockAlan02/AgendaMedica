@model SaveLaboratorySaveViewModel

<h2>@(Model.Id == 0 ? "Registrar Test" : "Actualizar test")</h2>

<form asp-action="@(Model.Id == 0 ? "CreateTest" : "UpdateTest")" method="post" class="form-horizontal">
    @if (Model?.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="form-group row">

        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Enter a descriptive laboratory name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12 text-center">
            @if(Model.Id != 0){
                <a href="/Laboratorytest" class="btn btn-secondary">Volver</a>
            }
            <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Crear" : "Actualizar")  Test</button>
        </div>
    </div>
</form>
